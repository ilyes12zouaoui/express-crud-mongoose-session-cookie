{% extends "../layout.twig" %}

{% block main %}
    <h1>update</h1>
    <form action="/blogs/update/{{blog.id}}" method="POST">

        <label>title :
            <input name="title" type="text" value="{{blog.title}}"/></label><br/>
        <label>description :
            <textarea name="description">{{blog.description}}</textarea>
        </label>
        <br>
        <label>
            type :

            <select name="type">
                {% for type in types %}
                    <option value="{{type.id}}" {% if type.id == blog.type %} selected {% endif %}>{{type.name}}</option>
                {% endfor %}
            </select>
        </label>
        <br>
            <label>
                is stolen :
                <input name="isStolen" {{blog.isStolen ? "checked=\"checked\"" : ""}} onchange="onCheckChange(this.checked);" type="checkbox"/>
            </label>
        </br>

        <label>
            stolen Source :
            <input {{blog.isStolen ? "" : "disabled"}} id="stolenSource" value="{{ blog.stolenSource }}" name="stolenSource" type="text"/>
        </label>
    </br>

    <input type="submit" value="update">
</form>
{% if errors is defined %}
    <ul class="errors" style="color:red;">
        {% for error in errors %}
            <li>{{error}}</li>
        {% endfor %}
    </ul>
{% endif %}{% endblock %}{% block scripts %}
<script>
    function onCheckChange(value) {

        document.getElementById("stolenSource").disabled = (! value);
    }
